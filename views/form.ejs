    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%= name %></h1>
                <%if(address !== "0"){%>
                <p style="color: green; font-weight: bold"><%= address %></p>
                <%} else {%>
                    <p style="color: red; font-weight: bold">Not Deployed</p>
                <%}%>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Add data
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                    <div class="form-group">
                                        <% for(let i = 0; i < template.properties.length; i++) {%>
                                            <label><%=template.properties[i].key%></label>
                                            <input class="form-control" id="<%=template.properties[i].key%>">
                                        <%}%>
                                    </div>
                                    <%if(address !== "0"){%>
                                    <button class="btn btn-primary" id="addFact">Add Fact</button>
                                    <button class="btn btn-primary disabled" id="addFactFromFile">Add data from file</button>
                                    <%} else {%>
                                    <button class="btn btn-primary disabled" id="addFact">Add Fact</button>
                                    <button class="btn btn-default disabled">Reset</button>
                                    <%}%>
                                <br>
                                <br>
                                <label>Add data from file</label>
                                <input type="file" id="dataset">
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <div class="col-lg-6">
                                <label>Output</label>
                                <textarea readonly id="output" class="form-control" rows="7"></textarea>
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Get data
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>ID</label>
                                    <input class="form-control" id="factId">
                                </div>
                                <%if(address !== "0"){%>
                                    <button class="btn btn-primary" id="buttonGet">Get Fact</button>
                                    <button class="btn btn-primary" id="buttonGetAll">Get All facts</button>
                                <%} else {%>
                                    <button class="btn btn-primary disabled" id="getFact">Get Fact</button>
                                    <button class="btn btn-primary disabled" id="buttonGetAll">Get All facts</button>
                                <%}%>
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <div class="col-lg-6">
                                <label>Output</label>
                                <textarea readonly id="outputGet" class="form-control" rows="7"></textarea>
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Group by
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Field for group by</label>
                                    <select class="form-control" id="fieldSelect">
                                        <% for(let i = 0; i < groupBys.length; i++) {%>
                                        <option><%=groupBys[i]%></option>
                                        <%}%>
                                    </select>
                                    <label>Operation</label>
                                    <select class="form-control" id="typeSelect">
                                        <option>COUNT</option>
                                        <option>SUM</option>
                                        <option>MIN</option>
                                        <option>MAX</option>
                                        <option>AVERAGE</option>
                                    </select>
                                    <label>Field for aggregation</label>
                                    <select class="form-control" id="aggregateFieldSelect">
                                        <% for(let i = 0; i < template.properties.length; i++) {%>
                                        <option><%=template.properties[i].key%></option>
                                        <%}%>
                                    </select>
                                </div>
                                <%if(address !== "0"){%>
                                    <button class="btn btn-primary" id="buttonGroupBy">Group by</button>
                                <%} else {%>
                                    <button class="btn btn-primary disabled" id="buttonGroupBy">Group by</button>
                                <%}%>
                            </div>
                            <div class="col-lg-6">
                                <label>Output</label>
                                <textarea readonly id="outputGB" class="form-control" rows="7"></textarea>
                                <label>Execution Time: </label> <p id="executionTime"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
