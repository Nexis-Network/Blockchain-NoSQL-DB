<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js"></script>
<script>
    var socket = io();
    var xhttpDep = new XMLHttpRequest();
    socket.on('progress', function(msg){
        $('#pbLi').css("display", "block");
        $('#pb').attr('aria-valuenow', (msg*100).toFixed(1));
        $('#pb').css('width', (msg*100).toFixed(1) + "%");
        $('#taskComp').html((msg*100).toFixed(1) + "%");
        let finished = false;
        if(msg*100 >= 99){
            if(!finished) {
                $('#taskComp').html("Completed!");
                $.notify({
                    // options
                    message: 'Data import completed!'
                }, {
                    // settings
                    type: 'success',
                    placement: {
                        from: "top",
                        align: "right"
                    },
                    allow_dismiss: true,
                    animate: {
                        enter: 'animated fadeInDown',
                        exit: 'animated fadeOutUp'
                    },
                    delay: 1000,
                    timer: 1000
                });
                finished = true;
            }
        }
    });

    socket.on('DONE', function(msg){
        if(msg === "TRUE"){
            console.log("GOT socket MESSAGE DONE!");
            xhttpDep.abort();
        } else {
            xhttpDep = new XMLHttpRequest();
        }
    });

    socket.on('gb_results', function(msg){
        $("#outputGB").val(msg);
    });

    let fl = "";
    const $fileInput = document.getElementById('dataset')
    $fileInput.addEventListener('change', function (event) {
        if(event.target.files.length > 0){
            fl = event.target.files[0];
            $("#addFactFromFile").removeClass("disabled");
        }
        // event.target.files[0] is selected file
        // you'll need to pass that to FileRader :)
    }, false)

    $(document).on('click', '#addFactFromFile', function(){
        console.log("ADD FACT BUTTON PRESSED");
        addFactFromFile();
    });

    $(document).on('click', '#buttonGet', function(){
        getFactById($("#factId").val());
    });

    $(document).on('click', '#buttonGetAll', function(){
        getAllFacts();
    });

    $(document).on('click', '#buttonGroupBy', function(){
        var selectedKey = $('#fieldSelect').find("option:selected").text();
        var selectedOp = $('#typeSelect').find("option:selected").text();
        var aggregateSelected = $('#aggregateFieldSelect').find("option:selected").text();
        groupBy(selectedKey,selectedOp,aggregateSelected);
    });

    function addFactFromFile() {
        console.log("ADD FACT FROM FILE CALLED");
        xhttpDep.onreadystatechange = function () {
            if (this.readyState <= 3) {
                $('#status').html("Importing data...");
            }
            if (this.readyState === 4 && this.status === 200) {
                $('#status').html("Data imported: " + this.responseText);
                $('#status').css({"color": 'green', "font-weight": "bold"});
                $("#prompt").remove();
            } else if (this.status === 400) {
                $('#status').html("Error while importing data");
                $('#status').css({"color": 'red'});
            }
        };

        xhttpDep.ontimeout = function (e) {
            console.log("TIMEOUT");
            xhttpDep.abort();
        };
        xhttpDep.open("GET", "/load_dataset/" + fl.name, true);
        xhttpDep.send();
    }

    function groupBy(field, operation, aggregateField) {
        var xhttp = new XMLHttpRequest();
        field = field.replace(" ","");
        xhttp.onreadystatechange = function() {
            if (this.readyState === 4 && this.status === 200) {
                $("#outputGB").val(this.responseText);
            }
        };
        xhttp.open("GET", "/groupby/" + field + "/" + operation + "/" + aggregateField, true);
        xhttp.send();
    }

let crnContractDeployed = <%-JSON.stringify(template)%>;
    $( "#addFact" ).click(function() {
        let fields = [];
        let values = [];
        for(var i = 0; i < crnContractDeployed.properties.length; i++){
            let crnKey = crnContractDeployed.properties[i];
            fields.push(crnKey);
            values.push({key:crnKey.key, value: $("#" + crnKey.key).val(), type: crnKey.data_type});
        }
        addFact(values);
    });

    function getAllFacts() {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function() {
            if (this.readyState === 4 && this.status === 200) {
                $("#outputGet").val(this.responseText);
            }
        };
        xhttp.open("GET", "/getallfacts/", true);
        xhttp.send();
    }

function getFactById(id) {
    var xhttp = new XMLHttpRequest();
    xhttp.onreadystatechange = function() {
        if (this.readyState === 4 && this.status === 200) {
            $("#outputGet").val(this.responseText);
        }
    };
    xhttp.open("GET", "/getFactById/" + id, true);
    xhttp.send();
}

    function addFact(values) {
        var xhttp = new XMLHttpRequest();
        xhttp.open("POST", "/addFact", true);
        xhttp.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
        xhttp.onreadystatechange = function() {
            if (this.readyState === 4 && this.status === 200) {
                $("#output").val(this.responseText);
            }
        };
        xhttp.send(JSON.stringify({values: values}));
    }
</script>

